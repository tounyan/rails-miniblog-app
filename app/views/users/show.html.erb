<%= provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
            <p>
                Created at <%= @user.created_at %><br>
                Updated at <%= @user.updated_at %>
            </p>
        </section>
    </aside>
</div>